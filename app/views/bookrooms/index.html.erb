<p style="color: green"><%= notice %></p>

<div style=" padding : 20px ">
  
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Room Type</th>
      <th>No. of Rooms</th>
      <th>Arival Time </th>
      <th>Departure Time </th>
      <th>Payment Type </th>
      <th>Any Tip</th>
      <th>Total Payment</th>
      
      <%# <th></th> %>
    </tr>
  </thead>

  <tbody >
      <% @bookrooms.each do |bookroom| %>

        <tr>

          <td>
            <%= link_to bookroom.first_name + ' ' + bookroom.last_name, bookroom %>
          </td>
          <td><%= bookroom.email %></td>
          <td><%= bookroom.room_type %></td>
          <td><%= bookroom.no_of_rooms %></td>
          <td><%= bookroom.start_time %></td>
          <td><%= bookroom.end_time %></td>
          <td><%= bookroom.payment_type %></td>
          <td><%= bookroom.tip %></td>
          <%# <td><%= bookroom.total_payment %></td>
          <td>
            <%= link_to 'Show Bill', bookroom, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-dark btn-sm" %>
          </td>
          
      
        </tr>
          
      <% end %>
  </tbody>
</table>

        
</div>
